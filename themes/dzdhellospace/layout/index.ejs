<section>
  <% page.posts.each(function (post) { %>
  <article>
    <div>
      <a href="<%- url_for(post.path) %>"><%= post.title %></a>
    </div>
    <div>
      <%- post.excerpt || '暂无摘要' %>
    </div>
    <div>
      <span class="post-time"><%- date(post.date, "YYYY-MM-DD") %></span>
    </div>
  </article>
  <% })%>
</section>
<div><%= page.total %></div>
<%- partial('_partial/paginator')%>