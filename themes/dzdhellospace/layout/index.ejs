<section class="posts-div">
  <% page.posts.each(function (post) { %>
  <article class="post-item">
    <div class="post-item-title ellipsis">
      <a href="<%- url_for(post.path) %>"><%= post.title %></a>
    </div>
    <div class="post-item-excerpt">
      <%- post.excerpt || '暂无摘要' %>
    </div>
    <div class="post-item-date">
      <span>创建日期：</span>
      <span class="post-time"><%- date(post.date, "YYYY-MM-DD hh:hh") %></span>
      <span>最近更新：</span>
      <span class="post-time"><%- date(post.upfated, "YYYY-MM-DD hh:mm") %></span>
    </div>
  </article>
  <% })%>
</section>
<div>
  <%- partial('_partial/paginator')%>
</div>