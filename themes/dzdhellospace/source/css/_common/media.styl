// PC端响应式媒体断点
@media (max-width: 1024px){
  header {
    nav {
      height: 100%;
      .menu {
        position: absolute;
        top: 100%;
        right: -21px;
        background: #1976d2;
        box-shadow: 0px 0px 6px 2px rgba(255, 255, 255, 0.5);
        transition: height .2s;
        height: 0;
        overflow: hidden;
        & > li {
          display: block !important;
          margin: 1rem;
        }
        &.height-0 {
          box-shadow: none;
        }
      }
    }
    .nav-show-bar {
      display: block !important;
    }
  }
}

