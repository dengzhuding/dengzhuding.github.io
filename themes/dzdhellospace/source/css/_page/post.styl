.content-toc-div {
  position: absolute;
  right: 0;
  top: 0;
  // top: 52px;
  height: 100%;
  .article-toc-parent {
    position: sticky;
    top: 0;
    transition: top 0.2s;
    padding: 0.5rem 0;
    background: white;
    max-width: 20rem;
    box-shadow: -1px 1px 6px 0px rgba(0, 0, 0, 0.3);
    border-bottom-left-radius: 0;
    border-radius: 0.3rem;
    opacity: 0.92;
    .article-toc-div {
      display: none;
      max-height: 500px;
      overflow: auto;
      .toc-item > .toc-link {
        white-space: nowrap;
        overflow: hidden;
        display: block;
        text-overflow: ellipsis;
        color: #3366CC;
        text-decoration: none;
        padding: 0.2rem 1rem;
        text-decoration: none;
        padding: 0.2rem 1rem;
        transition: background .2s, color .2s;
        &:hover {
          background: #1976d2;
          color: white;
        }
      }
      .toc > .toc-item > .toc-child > .toc-item {
        & > .toc-link  {
          padding-left: 2rem;
          font-size: 0.85rem;
        }
        & > .toc-child > .toc-item {
          & > .toc-link  {
            padding-left: 3rem;
            font-size: 0.75rem;
          }
          & > .toc-child > .toc-item {
            & > .toc-link  {
              padding-left: 4rem;
            }
          }
        }
      }
    }
    // & > div:first-child:before {
    //   content: '<'
    // }
    #circle-item {
      transform: translateX(0);
      transition: transform .2s;
    }
    #circle-bg {
      fill: #ccccc;
    }
    &.show-detail {
      .article-toc-div {
        display: block;
      }
      #circle-item {
        transform: translateX(-320px);
      }
      #circle-bg {
        fill: #00aaf2;
      }
    }
  }
}
header {
  &.height-40 + main {
    .content-toc-div .article-toc-parent {
      top: 40px;
    }
  }
  &.height-120 + main {
    .content-toc-div .article-toc-parent {
      top: 120px !important;
    }
  }
  &.static + main {
    .content-toc-div .article-toc-parent {
      top: 0 !important;
      // top: 36px !important;
    }
    .content-toc-div .article-toc-parent.top-0  {
      top: 0 !important;
    }
  }
}

